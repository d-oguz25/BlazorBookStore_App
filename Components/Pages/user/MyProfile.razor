<h3>myProfile</h3>
@page "/myAccount"
@inject UserState userState

<MudCard Class="profile-card">
    <MudCardContent>
        <MudAvatar Size="Size.Large" Image="https://via.placeholder.com/150" Alt="User Image" Class="profile-avatar" />
        <h2 class="profile-name"> @userState.UserName </h2>
        <p class="profile-bio">
            Kitapsever, yazar ve edebiyat tutkunu. Tarih ve bilim kurgu kitaplarına bayılır.
        </p>
        <MudDivider />
        <MudGrid>
            <MudItem xs="6">
                <p class="profile-stats"><strong>Takipçiler:</strong> 1200</p>
            </MudItem>
            <MudItem xs="6">
                <p class="profile-stats"><strong>Takip Edilen:</strong> 340</p>
            </MudItem>
        </MudGrid>
        <MudDivider />
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" >Profili Düzenle</MudButton>
    </MudCardContent>

    

</MudCard>








